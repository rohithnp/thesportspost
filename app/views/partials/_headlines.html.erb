<div class="headlines grid_5">
  <div class="headlines-header">
    <h3><div class="dark-title-background">Headlines</div></h3>
  </div>
  <div class="headlines-posts">
    <ul class="headlines-ul">
      <% articles.each do |article| %>
        <li class="headlines-entry">
          <a href="/articles/<%= article.slug %>"><span class="headlines-title"><%= article.title %></span></a>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="clear"></div>
</div>

