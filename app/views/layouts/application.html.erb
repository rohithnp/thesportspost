<!DOCTYPE html>
<html>
<head>
  <title>The Sports Post</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <link href='http://fonts.googleapis.com/css?family=Droid+Sans' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <div id="header">
      <div class="container_16">
        <div id="logo" class="grid_4">
          <b><a href="/">THE SPORTS POST</a></b>
        </div>
        <div id="userbox" class="suffix_4" style="float:right">
          <% if user_signed_in? %>
            <%= current_user.email %>
            &nbsp;-&nbsp;
            <% if current_user.role?(:writer) %>
              <%= link_to 'Admin', admin_articles_path %>
            <% elsif can? :manage, Article %>
              <%= link_to 'Admin', admin_path %>
            <% end %>
            &nbsp;-&nbsp;
            <%= link_to 'Sign Out', destroy_user_session_path, :method => 'DELETE' %>
          <% else %>
            <a href="/users/sign_in">Sign In</a>
          <% end %>
        </div>
        <div class="clear"></div>
      </div>
    </div>
    <div id="header-categories">
      <div class="container_16">
        <div id="header-categories" class="grid_12">
          <ul class="categories">
            <% @navbar_categories.each do |category| %>
              <li class="categories"><%= link_to category.full_name, "/categories/#{category.name}" %></li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="clear"></div>
    </div>
  </header>
  <div id="container">
    <section id="main">
      <%= yield %>
    </section>
    <footer>
      <div class="container_16">
        <div class="grid_12" style="padding-top: 30px">
          <div>&copy; 2011 http://thesportspost.com</div>
        </div>
        <div class="clear"></div>
      </div>
    </footer>
  </div>
</body>
</html>
