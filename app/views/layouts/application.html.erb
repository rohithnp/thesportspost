<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) || "The Sports Post" %></title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <% if false %>
    <link href='http://fonts.googleapis.com/css?family=Droid+Sans' rel='stylesheet' type='text/css'>
  <% end %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header class="container_16">
    <div id="header">
      <div id="header-container" class="white-background">
        <div id="logo" class="grid_4">
          <a href="/"><img src="/logo.png" alt="The Sports Post"/></a>
        </div>
        <div id="userbox">
          <% if user_signed_in? %>
            <%= current_user.email %>
            &nbsp;-&nbsp;
            <% if current_user.role?(:writer) %>
              <%= link_to 'Admin', admin_articles_path %>
              &nbsp;-&nbsp;
            <% elsif can? :manage, Article %>
              <%= link_to 'Admin', '/admin' %>
              &nbsp;-&nbsp;
            <% end %>
            <%= link_to 'Sign Out', destroy_user_session_path, :method => 'DELETE' %>
          <% else %>
            <div style="display: inline-block">
              <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
                <div>Member Login - <a href="/users/sign_up">Create Account</a></div>
                <table>
                  <tr>
                    <td><%= f.label :email %></td>
                    <td><%= f.email_field :email, :size => 15 %></td>
                  </tr>
                  <tr>
                    <td><%= f.label :password %></td>
                    <td><%= f.password_field :password, :size => 15 %></td>
                  </tr>
                </table>
                <% if false and devise_mapping.rememberable? -%>
                  <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
                <% end -%>
                <div><%= f.submit "Sign in" %></div>
              <% end %>
            </div>
          <% end %>
        </div>
        <div class="clear"></div>
      </div>
    </div>
    <div id="header-categories-container">
      <div id="header-categories" class="grid_12">
        <ul class="categories-list">
          <% @navbar_categories.each_with_index do |category,i| %>
            <span id="category-with-sub-<%= i %>" class="category-with-subcategory">
              <li id="category-<%= i %>" class="categories <% if @category and @category.name == category.name %>current-category<% end %>"><%= link_to category.full_name, "/categories/#{category.name}" %></li>
              <% if category.subcategories.length > 0 %>
                <ul id="category-<%= i%>-subcategories" class="subcategories-list">
                  <% category.subcategories.each do |sc| %>
                    <li class="subcategory">
                      <%= link_to sc.name, "/categories/#{category.name}/subcategories/#{sc.slug}" %>
                    </li>
                  <% end %>
                </ul>
                <script>
                  (function() {
                    var $c = $("#category-<%= i %>");
                    var $cws = $("#category-with-sub-<%= i %>");
                    var $sc = $("#category-<%= i %>-subcategories");
                    $sc.css({ left: $c[0].offsetLeft-8 });
                    $cws.hover(
                      function() {
                        $sc.css({ display: 'block' });
                      },
                      function() {
                        $sc.css({ display: 'none' });
                      }
                    );
                  })();
                </script>
              <% end %>
            </span>
          <% end %>
        </ul>
      </div>
      <div class="clear"></div>
    </div>
  </header>
  <div id="container">
    <section id="main">
      <%= yield %>
    </section>
    <div class="container_16">
      <footer>
        <div class="grid_12">
          <div>Copyright &copy; 2011 http://thesportspost.com</div>
        </div>
        <div class="clear"></div>
      </div>
      </footer>
    </div>
  </div>
</body>
</html>
