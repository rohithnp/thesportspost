<section id="slideshow-headlines-section">
  <div class="container_16">
    <div id="slideshow-container" class="grid_8">
      <div id="slideshow" style="height: 250px">
        <% if false %>
          <div><img src="<%= Article.first.image.url(:thumb) %>"/></div>
        <% end %>
      </div>
      <script>
        var slider = new Slider($("#slideshow"));
        slider.setPhotos(<%= @slideshow.html_safe %>);
        slider.setSize(440,200);
        slider.setTheme("theme-dark");
        slider.setTransitionFunction(SliderTransitionFunctions['squares']);
        slider.start();
      </script>
    </div>
    <div id="headlines-container" class="grid_4">
      <h3>Headlines</h3>
      <ul class="headlines">
        <% @headlines.each do |article| %>
          <li class="headlines"><%= link_to article.title, "/articles/#{article.slug}" %></li>
        <% end %>
      </ul>
    </div>
    <div class="clear"></div>
  </div>
</section>
<section id="popular-posts-section">
  <div class="container_16" style="padding-bottom: 20px">
    <div id="popular-posts">
      <div class="grid_12">
        <h3>Popular Posts</h3>
      </div>
      <div class="clear"></div>
      <% @posts.each_with_index do |article,i| %>
        <% if i>0 and i%3 == 0 %>
          <div class="clear"></div>
        <% end %>
        <div class="popular-post grid_4">
          <a href="/articles/<%= article.slug %>">
            <div class="popular-post-image-thumbnail">
              <% if article.image? %><img src="<%= article.image.url(:big) %>" width="225"/><% end %>
            </div>
            <div class="popular-post-title"><%= article.title %></div>
            <div class="popular-post-description"><%= strip_tags(article.text)[0..100].strip %>...</div>
          </a>
          <div class="clear"></div>
        </div>
      <% end %>
      <div class="clear"></div>
    </div>
    <div class="clear"></div>
  </div>
</section>
