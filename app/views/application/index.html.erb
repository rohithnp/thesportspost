<% if false %>
  <section id="slideshow-headlines-section" style="height: 200px">
    <div class="container_16">
      <div id="slideshow-container" class="grid_8">
        <div id="slideshow" style="height: 200px">
          <div>
            <img src="<%= Article.first.image.url(:thumb) %>"/>
          </div>
        </div>
      </div>
      <div id="headlines-container" class="grid_4" style="height: 200px">
        <h3>Headlines</h3>
        <ul class="headlines">
          <% @headlines.each do |article| %>
            <li class="headlines"><%= link_to article.title, "/articles/#{article.slug}" %></li>
          <% end %>
        </ul>
      </div>
      <div class="clear"></div>
    </div>
  </section>
<% end %>
<section id="popular-posts-section">
  <div class="container_16" style="padding-bottom: 20px">
    <div id="popular-posts" class="grid_14">
      <h3>Popular Posts</h3>
      <% @posts.each do |article| %>
        <div class="popular-post">
          <a href="/articles/<%= article.slug %>">
            <div class="popular-post-image-thumbnail">
              <% if article.image? %>
                <img src="<%= article.image.url(:thumb) %>" width="80" height="40"/>
              <% else %>
                <div style="width: 78px; height: 38px; border: 1px solid lightgray"></div>
              <% end %>
            </div>
            <div class="popular-post-title"><%= article.title %></div>
          </a>
          <div class="clear"></div>
        </div>
      <% end %>
      <div class="clear"></div>
    </div>
    <div class="clear"></div>
  </div>
</section>
