<section id="admin-section">
  <div class="container_16 white-background">
    <div class="grid_16 admin-main">
      <h2>Admin Panel - Users</h2>
      <table>
        <tr>
          <th>Email</th>
          <th>Role</th>
        </tr>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.email, edit_admin_user_path(user) %></td>
            <td><%= user.roles %></td>
          </tr>
        <% end %>
      </table>
    <div class="clear"></div>
  </div>
  <div class="clear"></div>
</section>
