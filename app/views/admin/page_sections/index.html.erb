<section id="admin-section">
  <div class="container_16 white-background">
    <div class="grid_16 admin-main">
      <h2>Page Section</h2>
      <p>NOTE: As of NOW, there's only one editable section at the bottom right of the front page. This can be easily extended, so just ASK if you want more.</p>
      <table>
        <%= form_for @page_section, :url => edit_admin_page_section_path(@page_section), :method => 'PUT' do |f| %>
          <tr>
            <td><b><%= f.label :name %></b></td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td><b>Articles</b></td>
            <td></td>
          </tr>
        <% end %>
      </table>
    <div class="clear"></div>
  </div>
  <div class="clear"></div>
</section>
